_S_e_e _A_l_s_o:

     'radiusMinimaxIC'

_E_x_a_m_p_l_e_s:

     N <- NormLocationFamily(mean=0, sd=1) 
     leastFavorableRadius(L2Fam=N, neighbor=ContNeighborhood(),
                          risk=asMSE(), rho=0.5)

